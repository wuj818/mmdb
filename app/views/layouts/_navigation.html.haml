.navbar.navbar-inverse.navbar-fixed-top
  .container
    .navbar-header
      %button.navbar-toggle{type: 'button', data: { toggle: 'collapse', target: '#navigation' }}
        %span.icon-bar
        %span.icon-bar
        %span.icon-bar

      = link_to 'MMDb', root_path, class: 'navbar-brand'

    #navigation.navbar-collapse.collapse
      %ul.nav.navbar-nav.navbar-right
        %li.dropdown.admin-dropdown.hidden
          = link_to '#', class: 'dropdown-toggle admin-dropdown hidden', data: { toggle: 'dropdown' } do
            Admin
            %b.caret

          %ul.dropdown-menu
            %li
              = link_to 'Add Movie', new_movie_from_imdb_path, rel: 'nofollow'

            %li
              = link_to 'Add List', new_item_list_path, rel: 'nofollow'

            %li
              = link_to 'Clear Cache', clear_cache_path, method: 'delete', rel: 'nofollow', data: { confirm: CONFIRM }

            %li
              = link_to 'Logout', logout_path, method: 'delete', class: 'logout', rel: 'nofollow'

        %li
          = link_to 'Login', login_path, class: 'login', rel: 'nofollow'

      - if content_for? :search
        = yield :search
      - else
        = render 'shared/search_form', target: search_movies_path, type: 'movie'
