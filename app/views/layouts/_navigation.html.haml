.navbar.navbar-fixed-top
  .navbar-inner
    .container
      = link_to 'MMDb', root_path,
        :class => 'brand',
        :alt => 'My Movie Database',
        :title => 'My Movie Database'

      %ul.nav
        %li{:class => active_nav_link?(:movies)}
          = link_to 'Movies', movies_path

        %li{:class => active_nav_link?(:people)}
          = link_to 'People', people_path

        %li{:class => active_nav_link?(:genres)}
          = link_to 'Genres', genres_path

        %li{:class => active_nav_link?(:keywords)}
          = link_to 'Keywords', keywords_path

        %li{:class => active_nav_link?(:languages)}
          = link_to 'Languages', languages_path

        %li.dropdown{:class => active_nav_link?(:countries)}
          = link_to '#',
            :class => 'dropdown-toggle',
            :data => { :toggle => 'dropdown' } do
            Countries
            %b.caret
          %ul.dropdown-menu
            %li
              = link_to 'List', countries_path
            %li
              = link_to 'Map', countries_map_path

        %li{:class => active_nav_link?(:decades)}
          = link_to 'Decades', decades_path

        %li{:class => active_nav_link?(:years)}
          = link_to 'Years', years_path

        %li{:class => active_nav_link?(:item_lists)}
          = link_to 'Lists', item_lists_path

      - if content_for? :search
        = yield :search
      - else
        = render 'shared/search_form', :target => search_movies_path, :type => 'movie'

      %p.navbar-text.pull-right
        - if admin?
          = link_to 'Logout', logout_path, :method => :delete
        - else
          = link_to 'Login', login_path
