!!! 5
%html
  %head
    %title= @title.blank? ? 'MMDb' : "MMDb - #{@title}"
    = stylesheet_link_tag 'blueprint', 'application'
    = javascript_include_tag :defaults
    = csrf_meta_tag
  %body
    #admin_wrapper
      #admin_bar
        - if admin?
          = link_to 'Add Movie', new_movie_from_imdb_path, :class => 'button left'
          #admin_controls
            = yield :admin_controls
          = link_to 'Logout', logout_path, :class => 'button right', :method => :delete
        - else
          = link_to 'Login', login_path, :class => 'button right'
        .clear

    .container
      .span-24
        %header
          %h1= link_to 'MMDb', root_path
      .span-24
        %nav
          = link_to 'Movies', movies_path
          = link_to image_tag('icons/chart-bar.png', :class => 'stats_icon'), stats_movies_path
          &nbsp;&nbsp;&nbsp;&nbsp;
          = link_to 'People', people_path
          = link_to image_tag('icons/chart-bar.png', :class => 'stats_icon'), stats_people_path
          &nbsp;&nbsp;&nbsp;&nbsp;
          = link_to 'Genres', url_for(:controller => :tags, :type => 'genres')
          = link_to image_tag('icons/chart-bar.png', :class => 'stats_icon'), formatted_stats_genres_path
          &nbsp;&nbsp;&nbsp;&nbsp;
          = link_to 'Keywords', url_for(:controller => :tags, :type => 'keywords')
          = link_to image_tag('icons/chart-bar.png', :class => 'stats_icon'), formatted_stats_keywords_path
          &nbsp;&nbsp;&nbsp;&nbsp;
          = link_to 'Languages', url_for(:controller => :tags, :type => 'languages')
          = link_to image_tag('icons/chart-bar.png', :class => 'stats_icon'), formatted_stats_languages_path
          &nbsp;&nbsp;&nbsp;&nbsp;
          = link_to 'Countries', url_for(:controller => :tags, :type => 'countries')
          = link_to image_tag('icons/chart-bar.png', :class => 'stats_icon'), formatted_stats_countries_path
      .span-24
        - flash.each do |kind, msg|
          = content_tag :div, :class => "flash #{kind}" do
            = msg
            %span.close X
        #ajax_activity.hidden
          = image_tag 'ajax-circle.gif'
        = yield
