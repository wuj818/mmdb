!!! 5
%html
  %head
    %title MMDB
    = stylesheet_link_tag 'blueprint', 'application'
    = javascript_include_tag :defaults
    = csrf_meta_tag
  %body
    #admin_bar
      = link_to('Add Movie', new_movie_path, :class => 'button') if admin?
      = link_to('Add Movie From IMDB', new_movie_path(:from_imdb => true), :class => 'button') if admin?
      = link_to('Login', login_path, :class => 'button') unless admin?
      = link_to('Logout', logout_path, :class => 'button') if admin?

    .container
      .span-24
        %header
          %h1= link_to 'MMDB', root_path
      .span-24
        - flash.each do |kind, msg|
          = content_tag :div, :class => "flash #{kind}" do
            = msg
            %span.close X
        = yield
