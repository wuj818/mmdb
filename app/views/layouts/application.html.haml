!!! 5
%html
  %head
    %title= @title.blank? ? 'MMDb' : "MMDb - #{@title}"
    = stylesheet_link_tag 'blueprint', 'application', 'fancybox', :cache => true
    = javascript_include_tag :defaults, 'jquery-ui', 'livequery', 'fancybox', 'tooltip', :cache => true
    = csrf_meta_tag
    - if Rails.env.production?
      = render 'shared/google_analytics'
  %body
    #ajax_activity.hidden
      = image_tag 'ajax-circle.gif', :width => 25, :height => 25

    #env{:class => Rails.env}

    #admin_wrapper
      #admin_bar
        = render('layouts/admin_bar').squish
        .clear

    .container
      .span-24
        %header
          = random_quote
          %h1= link_to 'MMDb', root_path
      .span-24
        %nav
          = render('layouts/navigation').squish
      .span-24.content
        - flash.each do |kind, msg|
          = content_tag :div, :class => "flash #{kind}" do
            = msg
            %span.close X
        = (yield).squish
      .span-24
        %footer
          = random_quote
          .copyright
            &copy; 2010 James Wu
