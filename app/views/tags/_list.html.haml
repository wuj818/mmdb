- smart_cache do
  - @tags = @tags.paginate(:page => page, :per_page => per_page)

  = render 'shared/page_entries_info', :results => @tags, :type => @type

  - unless @tags.empty?
    = will_paginate @tags

    %table{:id => @type}
      %tr
        %th= sort_link :name
        %th.numeric= sort_link :total
        %th.numeric= sort_link :average

      - @tags.each do |tag|
        %tr
          %td= tag_link tag, @type
          %td.numeric= tag.total
          %td.numeric= colorized_average tag

    = will_paginate @tags
