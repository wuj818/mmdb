= render 'shared/error_messages', :object => @credit

= form_for [@person, @credit], :html => { :class => 'form-horizontal' } do |f|
  = f.hidden_field :person_id, :value => @person.id

  .control-group
    = f.label :movie_id, 'Movie'
    .controls
      - @movies = Movie.select([:id, :title]).order(:sort_title)
      = collection_select :credit, :movie_id, @movies, :id, :title,
        { :include_blank => true },
        { :class => 'span4' }

  .control-group
    = f.label :job
    .controls
      = f.select :job, Credit::JOBS.keys,
        { :include_blank => true },
        { :class => 'span4' }

  .control-group
    = f.label :details
    .controls
      = f.text_field :details, :class => 'span4'

  .form-actions
    = f.submit 'Submit',
      :class => 'btn btn-primary loading',
      :data => { :'loading-text' => 'Submitting...' }
