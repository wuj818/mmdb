= form_tag target, method: 'get', id: 'search-filters', class: 'form-inline' do
  = hidden_field_tag 'type', type.pluralize

  .form-group
    = text_field_tag :q, params[:q].blank? ? nil : params[:q], placeholder: "Search #{type.pluralize}...", class: 'form-control', id: 'query-field'

  .form-group
    .input-group#minimum-field
      .input-group-addon
        Total >=

      = text_field_tag :minimum, params[:minimum], placeholder: '0', id: 'minimum_total', class: 'form-control'

  = submit_tag 'Filter', class: 'btn btn-default', disable_with: 'Filtering...'

%hr
