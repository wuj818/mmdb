= form_tag target, method: 'get', id: 'filter-form', class: 'form-inline' do
  = hidden_field_tag 'type', type.pluralize

  .form-group{style: 'width: 250px'}
    = text_field_tag :q, params[:q].blank? ? nil : params[:q], placeholder: "Search #{type.pluralize}...", class: 'form-control'

  .form-group
    .input-group{style: 'width: 140px;'}
      .input-group-addon
        Total >=

      = text_field_tag :minimum, params[:minimum], placeholder: '0', id: 'minimum_total', class: 'form-control'

  = submit_tag 'Filter', class: 'btn btn-default', disable_with: 'Filtering...'

%hr
