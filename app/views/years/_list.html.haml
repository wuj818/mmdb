- smart_cache do
  = render 'shared/page_entries_info', results: @years, type: 'year'

  - unless @years.total_count.zero?
    %hr

    = paginate @years, remote: true

    .table-responsive
      %table.table.table-striped.table-bordered.table-hover
        %thead
          %tr
            %th
              %strong #

            %th.w-100
              = sort_link :year

            %th.text-nowrap
              = sort_link :total

            %th.text-nowrap
              = sort_link :average

        %tbody
          - @years.each_with_index do |year, i|
            %tr
              %td.text-right
                = row_number i

              %td
                = link_to year.year, year_path(year.year)

              %td
                = year.total

              %td
                = colorized_average year

    = paginate @years, remote: true
