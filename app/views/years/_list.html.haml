- smart_cache do
  =# render 'shared/page_entries_info', :results => @years, :type => 'year'

  - unless @years.total_count.zero?
    =# paginate @years, :remote => true

    %table#ajax-table.table.table-striped.table-bordered
      %thead
        %tr
          %th{:style => 'width: 15px;'} #
          %th= sort_link :year
          %th{:style => 'width: 50px;'}= sort_link :total
          %th{:style => 'width: 70px;'}= sort_link :average

      %tbody
        - @years.each_with_index do |year, i|
          %tr
            %td= i + 1
            %td= link_to year.year, year_path(year.year)
            %td= year.total
            %td= colorized_average year

    =# paginate @years, :remote => true
