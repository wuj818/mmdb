- if action_name == 'edit'
  = render 'sortable'

  - @listings = @list.listings

  %ul.list-unstyled#sortable-list
    - @listings.each do |listing|
      %li{class: 'handle', id: dom_id(listing)}
        %strong.rank
          \##{listing.position}

        &nbsp;

        = link_to listing.movie.title, listing.movie

        = link_to 'Delete', [@list, listing], method: 'delete', class: 'text-danger', data: { confirm: t(:confirm) }

  = link_to 'Reorder!', reorder_item_list_path, id: 'reorder-link', class: 'btn btn-success'
- else
  - @listings = @list.listings

  %ol
    - @listings.each do |listing|
      %li{id: dom_id(listing)}
        = link_to listing.movie.title, listing.movie
