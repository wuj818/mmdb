- if admin?
  = render 'sortable'

- if action_name == 'edit'
  - @listings = @list.listings

  %ul#movies
    - @listings.each do |listing|
      %li{:class => 'handle', :id => dom_id(listing)}
        %span.rank ##{listing.position}
        = tiny_movie_poster_link listing.movie
        = link_to listing.movie.title, listing.movie, :class => 'movie_link'
        = link_to 'Delete', [@list, listing], :confirm => CONFIRM, :method => :delete, :class => 'delete'

  = link_to 'Reorder!', reorder_item_list_path, :id => 'reorder_link', :class => 'button'
- else
  - cache(@list, :expires_in => 2.weeks) do
    - @listings = @list.listings

    %ul#movies
      - @listings.each do |listing|
        %li{:id => dom_id(listing)}
          %span.rank ##{listing.position}
          = tiny_movie_poster_link listing.movie
          = link_to listing.movie.title, listing.movie, :class => 'movie_link'
