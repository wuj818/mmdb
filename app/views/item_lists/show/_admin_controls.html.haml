.admin-controls
  = link_to new_item_list_listing_path(@list), :class => 'btn btn-success', :rel => :nofollow do
    %i.icon-plus-sign.icon-white
    Add Listing

  = link_to [:edit, @list], :class => 'btn btn-info' do
    %i.icon-edit.icon-white
    Edit

  = link_to @list, :class => 'btn btn-danger', :rel => :nofollow,
    :confirm => CONFIRM, :method => :delete do
    %i.icon-trash.icon-white
    Delete
