- remote ||= false

= form_for :session,
  :url => sessions_path,
  :remote => remote,
  :html => { :class => 'form-inline' } do |f|
  = f.password_field :password, :id => 'Password', :autofocus => true

  = f.submit 'Login',
    :id => 'login-button',
    :class => 'btn loading',
    :data => { :'loading-text' => 'Submitting...' }
