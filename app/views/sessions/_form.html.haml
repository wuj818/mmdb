- remote ||= false

= form_for :session, url: sessions_path, remote: remote, html: { class: 'form-inline' } do |f|
  .form-group
    = f.password_field :password, id: 'Password', class: 'form-control', autofocus: true

  = f.submit 'Login', id: 'login-button', class: 'btn btn-primary', disable_with: 'Submitting...'
