- flash = render 'shared/flashes'

- if admin?
  $.get('/admin-controls');
  $('#flashes').replaceWith("#{escape_javascript flash}");
  $('#login-modal').modal('hide');
- else
  $('#login-modal').effect('shake', { times: 4, distance: 10 }, 50);
  $('#login-button').button('reset');
  $('.modal-body #flashes').remove();
  $('.modal-body').prepend("#{escape_javascript flash}");
