- smart_cache do
  = render 'shared/page_entries_info', results: @decades, type: 'decade'

  - unless @decades.total_count.zero?
    %hr

    = paginate @decades, remote: true

    .table-responsive
      %table.table.table-striped.table-bordered.table-hover
        %thead
          %tr
            %th.text-right{style: 'width: 40px;'}
              %strong #

            %th
              = sort_link :decade

            %th{style: 'width: 70px;'}
              = sort_link :total

            %th{style: 'width: 90px;'}
              = sort_link :average

        %tbody
          - @decades.each_with_index do |decade, i|
            %tr
              %td.text-right
                = row_number i

              %td
                = link_to decade.decade << 's', decade_path(decade.decade)

              %td
                = decade.total

              %td
                = colorized_average decade

    = paginate @decades, remote: true
