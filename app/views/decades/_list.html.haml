- smart_cache do
  = render 'shared/page_entries_info', :results => @decades, :type => 'decade'

  - unless @decades.total_count.zero?
    = paginate @decades, :remote => true

    %table.table.table-striped.table-bordered
      %thead
        %tr
          %th{:style => 'width: 15px;'} #
          %th= sort_link :decade
          %th{:style => 'width: 50px;'}= sort_link :total
          %th{:style => 'width: 70px;'}= sort_link :average

      %tbody
        - @decades.each_with_index do |decade, i|
          %tr
            %td= row_number i
            %td= link_to decade.decade << 's', decade_path(decade.decade)
            %td= decade.total
            %td= colorized_average decade

    = paginate @decades, :remote => true
