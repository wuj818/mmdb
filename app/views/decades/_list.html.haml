- smart_cache do
  = render 'shared/page_entries_info', results: @decades, type: 'decade'

  - unless @decades.total_count.zero?
    %hr

    = paginate @decades

    .table-responsive
      %table.table.table-bordered.table-hover
        %thead.thead-light
          %tr
            %th.text-right
              %strong #

            %th.w-100
              = sort_link :decade

            %th.text-nowrap
              = sort_link :total

            %th.text-nowrap
              = sort_link :average

        %tbody
          - @decades.each_with_index do |decade, i|
            %tr
              %td.text-right
                = row_number i

              %td
                = link_to "#{decade.decade}s", decade_path(decade.decade)

              %td
                = decade.total

              %td
                = colorized_average decade

    = paginate @decades
