- smart_cache do
  = render 'shared/page_entries_info', :results => @movies, :type => 'movie'

  - unless @movies.total_count.zero?
    = paginate @movies

    %table#movies
      %tr
        %th= sort_link :title
        %th.numeric= sort_link :year
        %th.numeric= sort_link :runtime
        %th.numeric= sort_link :rating

      - @movies.each do |movie|
        %tr
          %td
            = tiny_movie_poster_link movie
            = link_to movie.title, movie, :class => 'movie_link'
          %td.numeric= movie.year
          %td.numeric= movie.runtime
          %td.numeric= colorized_rating movie

    = paginate @movies
