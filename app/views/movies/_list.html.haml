- smart_cache do
  = render 'shared/page_entries_info', results: @movies, type: 'movie'

  - unless @movies.total_count.zero?
    %hr

    = paginate @movies, remote: true

    .table-responsive
      %table.table.table-bordered.table-hover
        %thead.thead-light
          %tr
            %th.text-right
              %strong #

            %th.w-100
              = sort_link :title

            %th.text-nowrap
              = sort_link :year

            %th.text-nowrap
              = sort_link :runtime

            %th.text-nowrap
              = sort_link :rating

        %tbody
          - @movies.each_with_index do |movie, i|
            %tr
              %td.text-right
                = row_number i

              %td
                = tiny_movie_poster_link movie
                = link_to movie.title, movie, class: 'movie-link'

              %td
                = movie.year

              %td
                = movie.runtime

              %td
                = colorized_rating movie

    = paginate @movies, remote: true
