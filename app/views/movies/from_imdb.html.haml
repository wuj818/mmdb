.page-header
  %h1 Add New Movie

= form_tag scrape_info_path, :class => 'form-inline' do
  = text_field_tag :imdb_url, nil,
    :id => 'IMDb',
    :placeholder => 'IMDb url',
    :autofocus => true

  = submit_tag 'Submit',
    :class => 'btn btn-primary loading',
    :data => { :'loading-text' => 'Submitting...' }
