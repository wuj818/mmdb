.admin-controls
  = link_to new_person_credit_path(@person), :class => 'btn btn-success' do
    %i.icon-plus-sign.icon-white
    Add Credit

  = link_to [:edit, @person], :class => 'btn btn-info' do
    %i.icon-edit.icon-white
    Edit

  = link_to @person, :confirm => CONFIRM, :method => :delete, :class => 'btn btn-danger' do
    %i.icon-trash.icon-white
    Delete
