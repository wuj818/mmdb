= render 'shared/error_messages', :object => @listing

= form_for [@list, @listing], :html => { :class => 'form-horizontal' } do |f|
  = f.hidden_field :item_list_id, :value => @list.id

  .control-group
    = f.label :movie_id, 'Movie'
    .controls
      - @movies = Movie.select([:id, :title]).order(:sort_title)
      = collection_select :listing, :movie_id, @movies, :id, :title,
        { :include_blank => true },
        { :class => 'span4' }

  .form-actions
    = f.submit 'Submit',
      :class => 'btn btn-primary loading',
      :data => { :'loading-text' => 'Submitting...' }
